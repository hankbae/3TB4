module hex_counter(
	input 				Clock,
							Reset_n,
							Start_n,
							Stop_n,
	output reg [19:0] Q
	);
	
	reg [19:0] timer;
	reg pause;
	
	
	always @(posedge clock)
	begin
		if (Reset_n == 1'b0) Q[19:0] <= 20'b0;
		else if (Start_n == 1'b0) Q[19:0] <= Q[19:0] + 20'b1;
		else if (Stop_n == 1'b0) Q[19:0] <= Q[19:0];
	
	end
	
	
	

endmodule 